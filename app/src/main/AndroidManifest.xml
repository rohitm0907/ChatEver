<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rohit.chitchat">

    <uses-permission android:name="android.permission.INTERNET" />
    // for taking current location of user while using app
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    // for share audios and videos in chat
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    // for share voice recording in chat
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    // for fetching the contacts so that user can easily start chatting with their contacts
    <uses-permission android:name="android.permission.READ_CONTACTS"/>/>
    <application
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_logo_square"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/app_logo_round"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.ChitChat">
        <activity android:name="com.rohit.chitchat.ChatLiveActivity"
         />

        <service
            android:name="com.rohit.chitchat.Firebase.MyFireBaseMessagingService" android:exported="true" android:enabled="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <activity android:name="com.rohit.chitchat.HomeActivity" />
        <activity
            android:name="com.rohit.chitchat.ProfileActivity"
            android:exported="true" />
        <activity
            android:name="com.rohit.chitchat.CodeVerificationActivity"
            android:exported="true" />
        <activity
            android:name="com.rohit.chitchat.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.rohit.chitchat.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<provider
        android:name="androidx.core.content.FileProvider"
        android:authorities="${applicationId}.provider"
        android:exported="false"
        android:grantUriPermissions="true">
        <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/provider_paths" />
    </provider>
    </application>
</manifest>